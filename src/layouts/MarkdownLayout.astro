---
import Nav from "../components/Nav.astro";
import { Image } from "@astrojs/image/components";
import { log } from "astro/dist/core/logger/core";
import BaseHead from "../components/BaseHead.astro";
import Footer from "../components/Footer.astro";

export interface Props {
  frontmatter: {
    title: string;
    description: string;
    image: string;
  };
}

const { title, description, image } = Astro.props.frontmatter;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <BaseHead
      title={"Michail Lois/ " + title}
      description={"My personal website " + description}
      image={image}
    />
  </head>
  <body>
    <Nav />
    <main class="max-w-xl mx-auto px-4">
      <Image
        class="rounded"
        alt="image"
        src={image}
        aspectRatio={2.0}
        height={400}
      />
      <h1 class="font-bold text-2xl mt-8">{title}</h1>
      <p class="mt-2 mb-4">{description}</p>
      <hr class="border-t border-primary" />
      <article class="prose break-all prose-img:w-full">
        <slot />
      </article>
    </main>
    <Footer />
  </body>
</html>
