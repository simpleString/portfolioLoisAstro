---
import { Image } from "@astrojs/image/components";

export interface Props {
  title: string;
  image: string;
  href: string;
  description: string;
}

const { href, title, image, description } = Astro.props;
---

<article
  class="flex flex-col md:flex-row max-h-max md:max-h-52 gap-6 w-full items-center my-2"
>
  <div class="basis-1/3">
    <Image class="rounded" alt="image" width={160} height={160} src={image} />
  </div>
  <div class="basis-2/3">
    <h1 class="font-bold text-2xl block text-center md:text-start">
      <a class="link link-hover" href={href}>{title}</a>
    </h1>
    <p
      class="indent-4 mt-2 h-[124px] overflow-hidden max-w-sm break-all inline-block"
    >
      {description}
    </p>
  </div>
</article>
